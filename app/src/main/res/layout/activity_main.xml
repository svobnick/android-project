<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:background="@color/thisColor"
            android:layout_height="350dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toTopOf="@+id/thatLayout"
            android:id="@+id/thisLayout">
        <TextView
                android:text="@string/thisText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/thisText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:background="@color/thatColor"
            android:layout_height="358dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/thatLayout"
            app:layout_constraintTop_toBottomOf="@+id/thisLayout">

        <TextView
                android:text="@string/thatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/thatText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.501"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>