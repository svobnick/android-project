<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ChoiceActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/thisLayout"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:background="@color/first"
            android:layout_height="350dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/thatLayout">
        <TextView
                android:id="@+id/thisText"
                android:text="@string/this_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="makeChoice"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/thatLayout"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:background="@color/second"
            android:layout_height="358dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thisLayout">

        <TextView
                android:id="@+id/thatText"
                android:text="@string/that_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="makeChoice"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
            android:id="@+id/menu_button"
            android:text="@string/menu_button"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:onClick="onMenuButtonClick"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>