<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.NewQuestionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newThisLayout"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:background="@color/this_color"
            android:layout_height="350dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/newThatLayout">
        <EditText
                android:id="@+id/newThisText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:inputType=""/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newThatLayout"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:background="@color/that_color"
            android:layout_height="358dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newThisLayout">
        <EditText
                android:id="@+id/newThatText"
                android:layout_width="0dp"
                android:layout_height="354dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:inputType=""/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
            android:id="@+id/menu_button"
            android:text="@string/menu_button"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:onClick="onMenuButtonClick"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/background_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>