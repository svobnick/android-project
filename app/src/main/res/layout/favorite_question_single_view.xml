<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/f_first_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/choice_top_half_list"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/f_first_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@id/f_first_stat"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_light"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingTop="2dp"
            android:text="@string/choice_placeholder"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/f_first_stat"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp"
            android:background="@color/transparent">

            <TextView
                android:id="@+id/f_first_percent_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="-3dp"
                android:fontFamily="@font/sf_ui_display_bold"
                android:includeFontPadding="false"
                android:text="@string/percentage_placeholder"
                android:textColor="@color/percentage_stat"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/f_first_percent_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/f_first_percent_value"
                android:fontFamily="@font/sf_ui_display_medium"
                android:includeFontPadding="false"
                android:text="@string/percentage_symbol"
                android:textColor="@color/percentage_symbol"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/f_first_peoples_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/f_first_percent_value"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/sf_ui_display_light"
                android:paddingStart="1dp"
                android:text="@string/amount_placeholder"
                android:textColor="@color/amount_stat"
                android:textSize="10sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/f_last_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/choice_bottom_half_list">

        <TextView
            android:id="@+id/f_last_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@id/f_last_stat"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_light"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingTop="2dp"
            android:text="@string/choice_placeholder"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/f_last_stat"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp"
            android:background="@color/transparent">

            <TextView
                android:id="@+id/f_last_percent_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="-3dp"
                android:fontFamily="@font/sf_ui_display_bold"
                android:includeFontPadding="false"
                android:text="@string/percentage_placeholder"
                android:textColor="@color/percentage_stat"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/f_last_percent_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/f_last_percent_value"
                android:fontFamily="@font/sf_ui_display_medium"
                android:includeFontPadding="false"
                android:text="@string/percentage_symbol"
                android:textColor="@color/percentage_symbol"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/f_last_peoples_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/f_last_percent_value"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/sf_ui_display_light"
                android:paddingStart="1dp"
                android:text="@string/amount_placeholder"
                android:textColor="@color/amount_stat"
                android:textSize="10sp" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>