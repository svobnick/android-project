<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MenuActivity">

    <TextView
            android:id="@+id/menu_history_item"
            android:text="@string/history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:textColor="@color/text_color"
            android:onClick="onHistoryButtonClick"
            app:layout_constraintBottom_toTopOf="@+id/menu_my_questions_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/menu_my_questions_item"
            android:text="@string/my_questions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:textColor="@color/text_color"
            android:onClick="onMyQuestionsButtonClick"
            app:layout_constraintBottom_toTopOf="@+id/menu_commented_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/menu_commented_item"
            android:text="@string/commented_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="64dp"
            android:textColor="@color/text_color"
            android:onClick="onCommentedButtonClick"
            app:layout_constraintBottom_toTopOf="@+id/new_question_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/new_question_item"
            android:text="@string/new_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:textColor="@color/text_color"
            android:onClick="onNewQuestionButtonClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>