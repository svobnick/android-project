<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.svobnick.thisorthat">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.svobnick.thisorthat.app.ThisOrThatApp"
            android:allowBackup="true"
            android:icon="@mipmap/launcher_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/launcher_icon_round"
            android:supportsRtl="true"
            android:usesCleartextTraffic="true"
            android:theme="@style/AppTheme">
        <meta-data
                android:name="com.google.android.gms.ads.APPLICATION_ID"
                android:value="@string/application_ad_id"/>

        <activity android:name="com.svobnick.thisorthat.activities.StartupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.svobnick.thisorthat.activities.ChoiceActivity"/>
        <activity android:name="com.svobnick.thisorthat.activities.NewQuestionActivity"/>
        <activity android:name="com.svobnick.thisorthat.activities.AnsweredQuestionsActivity"/>
        <activity android:name="com.svobnick.thisorthat.activities.MyQuestionsActivity"/>
        <activity android:name="com.svobnick.thisorthat.activities.FavoriteQuestionsActivity"/>
        <activity android:name="com.svobnick.thisorthat.activities.CommentsActivity"/>

    </application>
</manifest>