<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.svobnick.thisorthat">


    <application
            android:name="com.svobnick.thisorthat.app.ThisOrThatApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:usesCleartextTraffic="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.svobnick.thisorthat.activities.ChoiceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.svobnick.thisorthat.activities.MenuActivity"/>
        <activity android:name="com.svobnick.thisorthat.activities.NewQuestionActivity"/>
        <activity android:name="com.svobnick.thisorthat.activities.AnsweredQuestionsActivity"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>